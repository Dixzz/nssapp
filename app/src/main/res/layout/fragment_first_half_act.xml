<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.FirstHalfFrag">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/act_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/act_bg_lines"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_5dp"
            android:paddingBottom="@dimen/padding_5dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/area_act"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/google_sans"
                android:gravity="center"
                android:text="@string/area"
                android:textColor="@color/blackGrey"
                android:textSize="@dimen/text_18sp" />

            <View
                android:id="@+id/line_main"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/blackish"
                android:visibility="visible" />

            <TextView
                android:id="@+id/univ_act"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/google_sans"
                android:gravity="center"
                android:text="University/District"
                android:textColor="@color/blackGrey"
                android:textSize="@dimen/text_18sp" />

            <View
                android:id="@+id/line_main2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/blackish"
                android:visibility="visible" />

            <TextView
                android:id="@+id/clg_act"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/google_sans"
                android:gravity="center"
                android:text="@string/clg"
                android:textColor="@color/blackGrey"
                android:textSize="@dimen/text_18sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/areafyList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space_3dp"
        android:layout_marginTop="120dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/univfyList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space_3dp"
        android:layout_marginTop="120dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/clgfyList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space_3dp"
        android:layout_marginTop="120dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="@dimen/space_10dp"
        android:paddingStart="@dimen/padding_5dp"
        android:paddingEnd="@dimen/padding_5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/backActBtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="@dimen/space_10dp"
            android:background="@drawable/ic_back_24"
            android:visibility="visible" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>